<%= bootstrap_form_with(model: @computer, local: true, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>

  <%= f.alert_message "Please fix the errors below.", error_summary: false %>
 
  <%= f.text_field :model %>
  <%= f.text_field :price %>
  <%= f.text_field :cpu %>
  <%= f.text_field :os %>
  <%= f.text_field :disk %>
  <%= f.text_field :ram %>
  <%= f.text_field :screen %>

  <%= f.form_group do %>
    <%= f.primary @computer.persisted? ? "Update Computer" : "Create Computer"%>
  <% end %>
<% end %>